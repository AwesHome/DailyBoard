<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.sage.cerberus.model.Game" table="Game">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="255" not-null="true"/>
        </property>
        <property name="releaseDate" type="timestamp">
            <column name="releaseDate" not-null="true"/>
        </property>
		<many-to-one name="publisher" column="publisherId" 
			unique="false" lazy="false" class="com.sage.cerberus.model.Publisher" 
			not-null="true" cascade="save-update" />
			
		<set name="platforms" table="GamePlatforms" cascade="save-update" lazy="false">
			<key>
				<column name="gameId" not-null="true" />
			</key>
			<many-to-many class="com.sage.cerberus.model.Platform">
				<column name="platformId" not-null="true" />
			</many-to-many>
		</set>
        
    </class>
</hibernate-mapping>
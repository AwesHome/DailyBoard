<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.sage.cerberus.model.security.Role" table="Role">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string" lazy="false" >
            <column name="name" length="255" not-null="true"/>
        </property>
        
        <set name="content" table="RolePermissions" lazy="false">
    		<key column="roleId"/>
    		<element column="permissionId" >
    		    <type name="org.hibernate.type.EnumType">
            		<param name="enumClass">com.sage.cerberus.model.security.Permission</param> 
        		</type> 
    		</element>
		</set>
        
    </class>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sage.cerberus.model.security.User" table="User">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="identity" />
		</id>

		<many-to-one name="person" column="personId" unique="true"
			lazy="false" class="com.sage.cerberus.model.security.Person"
			not-null="true" cascade="save-update" />

		<set name="roles" table="UserRoles" cascade="save-update" lazy="false">
			<key>
				<column name="userId" not-null="true" />
			</key>
			<many-to-many class="com.sage.cerberus.model.security.Role">
				<column name="roleId" not-null="true" />
			</many-to-many>
		</set>
		<many-to-one name="userCredentials" column="userCredentialsId"
			unique="true" class="com.sage.cerberus.model.security.UserCredentials"
			not-null="true" cascade="save-update" />
	</class>
</hibernate-mapping>